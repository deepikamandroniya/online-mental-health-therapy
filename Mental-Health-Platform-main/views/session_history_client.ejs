<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Session History</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        h1 {
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        table, th, td {
            border: 1px solid #ccc;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <!-- <form action="/session_history" method="post">
        <label for="psychologistId">Psychologist ID:</label>
        <input type="text" id="psychologistId" name="psychologistId" required>
        <button type="submit">Show Session History</button>
    </form> -->
    
    

    <div class="container">
        <% if (sessions) { %>
          <h1>Session History</h1>
          <table>
            <tr>
              <th>Date</th>
              <th><%= sessionType === 'psychologist' ? 'Psychologist Name' : 'Client Name' %></th>
              <th>Session Time</th>
              <th>Report</th>
            </tr>
            <!-- Repeat the following row for each session -->
            <% sessions.forEach(session => { %>
              <tr>
                <td><%= session.session_date %></td>
                <td><%= sessionType === 'psychologist' ? session.psy_name : session.name %></td>
                <td><%= session.session_time %></td>
                <td><a href="/session_history/user/report/<%=session.session_id%>">REPORT</a></td>
                <td><a href="/paymet/user/<%=session.session_id%>">Payment</a></td>
              </tr>
            <% }); %>
          </table>
        <% } else { %>
          <p>No session history found for this <%= sessionType === 'psychologist' ? 'psychologist' : 'user' %>.</p>
        <% } %>
      </div>
      

</body>
</html>